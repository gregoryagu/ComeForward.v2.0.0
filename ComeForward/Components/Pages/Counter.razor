@page "/counter"
@rendermode InteractiveServer

<script src="https://cdn.tailwindcss.com"></script>
<PageTitle>Counter</PageTitle>

<div class="flex justify-center items-center mt-20">
    <div class="max-w-md w-full bg-white shadow-lg rounded-lg p-8 text-center">
        <h1 class="text-3xl font-bold text-gray-800 mb-4">Counter</h1>
        <p role="status" class="text-lg text-gray-600 mb-6">
            Current count: <span class="text-2xl font-semibold text-blue-600">@currentCount</span>
        </p>
        <button class="px-6 py-3 bg-blue-600 text-white rounded-lg shadow-md transition-transform transform hover:scale-105 hover:bg-blue-700 active:scale-95 focus:outline-none"
                @onclick="IncrementCount">
            Click me
        </button>
    </div>
</div>

@code {
    private int currentCount = 0;



    private void IncrementCount()

    {

        currentCount++;

    }
}
